{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Server in STDIO Mode",
      "type": "node",
      "request": "launch",
      "program": "./src/index.ts",
      "runtimeExecutable": "tsx",
      "args": ["--stdio"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ]
    }
  ]
}
